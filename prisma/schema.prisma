generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model category {
  id                   String                 @id @default(cuid())
  name                 String                 @db.VarChar(100)
  slug                 String                 @unique(map: "Category_slug_key") @db.VarChar(100)
  type                 category_type
  knowledgebasearticle knowledgebasearticle[]
  post                 post[]
  tool                 tool[]
  videotutorial        videotutorial[]
  work                 work[]
}

model knowledgebasearticle {
  id          String      @id @default(cuid())
  title       String      @db.VarChar(255)
  slug        String      @unique(map: "KnowledgeBaseArticle_slug_key") @db.VarChar(255)
  content     Json
  excerpt     String?     @db.Text
  coverImage  String?     @db.Text
  coverRatio  String      @default("3:4") @db.VarChar(10)
  status      post_status @default(DRAFT)
  categoryId  String?
  authorId    String
  sortOrder   Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  publishedAt DateTime?
  user        user        @relation(fields: [authorId], references: [id], map: "KnowledgeBaseArticle_authorId_fkey")
  category    category?   @relation(fields: [categoryId], references: [id], map: "KnowledgeBaseArticle_categoryId_fkey")
  tag         tag[]       @relation("knowledgebasetagtopost")

  @@index([authorId], map: "KnowledgeBaseArticle_authorId_idx")
  @@index([categoryId], map: "KnowledgeBaseArticle_categoryId_idx")
  @@index([status], map: "KnowledgeBaseArticle_status_idx")
}

model tag {
  id                   String                 @id @default(cuid())
  name                 String                 @unique(map: "Tag_name_key") @db.VarChar(50)
  knowledgebasearticle knowledgebasearticle[] @relation("knowledgebasetagtopost")
  post                 post[]                 @relation("posttotag")
  videotutorial        videotutorial[]        @relation("tagtovideotutorial")
  work                 work[]                 @relation("tagtowork")
}

model media {
  id         String   @id @default(cuid())
  name       String   @db.VarChar(255)
  url        String   @db.Text
  type       String   @db.VarChar(50)
  size       Int
  width      Int?
  height     Int?
  entityType String   @db.VarChar(50)
  entityId   String   @db.VarChar(64)
  createdAt  DateTime @default(now())

  @@index([entityType, entityId], map: "Media_entityType_entityId_idx")
  @@index([entityType], map: "Media_entityType_idx")
  @@index([type], map: "Media_type_idx")
}

model order {
  id            String       @id @default(cuid())
  orderNo       String       @unique(map: "Order_orderNo_key") @db.VarChar(64)
  workId        String
  versionId     String?
  upgradeFromId String?      @db.VarChar(64)
  amount        Decimal      @db.Decimal(10, 2)
  status        order_status @default(PENDING)
  buyerEmail    String       @db.VarChar(255)
  buyerName     String?      @db.VarChar(100)
  paymentId     String?      @db.VarChar(64)
  paidAt        DateTime?
  downloadToken String?      @unique(map: "Order_downloadToken_key") @db.VarChar(64)
  downloadCount Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  workversion   workversion? @relation(fields: [versionId], references: [id], map: "Order_versionId_fkey")
  work          work         @relation(fields: [workId], references: [id], map: "Order_workId_fkey")

  @@index([buyerEmail], map: "Order_buyerEmail_idx")
  @@index([status], map: "Order_status_idx")
  @@index([versionId], map: "Order_versionId_idx")
  @@index([workId], map: "Order_workId_idx")
}

model post {
  id          String      @id @default(cuid())
  title       String      @db.VarChar(255)
  slug        String      @unique(map: "Post_slug_key") @db.VarChar(255)
  content     Json
  excerpt     String?     @db.Text
  coverImage  String?     @db.Text
  status      post_status @default(DRAFT)
  categoryId  String?
  authorId    String
  sortOrder   Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  publishedAt DateTime?
  coverRatio  String      @default("3:4") @db.VarChar(10)
  user        user        @relation(fields: [authorId], references: [id], map: "Post_authorId_fkey")
  category    category?   @relation(fields: [categoryId], references: [id], map: "Post_categoryId_fkey")
  tag         tag[]       @relation("posttotag")

  @@index([authorId], map: "Post_authorId_idx")
  @@index([categoryId], map: "Post_categoryId_idx")
  @@index([status], map: "Post_status_idx")
}

model settings {
  id             String   @id @default("settings")
  siteName       String   @default("Fan's Studio") @db.VarChar(255)
  avatar         String?  @db.Text
  socialLinks    Json?
  about          Json?
  nav            Json?
  pageCopy       Json?
  updatedAt      DateTime @updatedAt
  theme          Json?
  footer         Json?
  accessPassword String?  @db.Text
}

model tool {
  id          String   @id @default(cuid())
  name        String   @db.VarChar(100)
  description String   @db.Text
  link        String   @db.Text
  categoryId  String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  category    category @relation(fields: [categoryId], references: [id], map: "Tool_categoryId_fkey")

  @@index([categoryId], map: "Tool_categoryId_idx")
  @@index([isActive], map: "Tool_isActive_idx")
}

model user {
  id                   String                 @id @default(cuid())
  email                String                 @unique(map: "User_email_key")
  password             String
  name                 String?                @db.VarChar(100)
  avatar               String?                @db.Text
  bio                  String?                @db.Text
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  role                 user_role              @default(ADMIN)
  knowledgebasearticle knowledgebasearticle[]
  post                 post[]
  work                 work[]
}

model videotutorial {
  id          String    @id @default(cuid())
  title       String    @db.VarChar(255)
  slug        String    @unique(map: "VideoTutorial_slug_key") @db.VarChar(255)
  description String?   @db.Text
  videoUrl    String    @db.Text
  thumbnail   String?   @db.Text
  categoryId  String?
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  coverRatio  String    @default("3:4") @db.VarChar(10)
  category    category? @relation(fields: [categoryId], references: [id], map: "VideoTutorial_categoryId_fkey")
  tag         tag[]     @relation("tagtovideotutorial")

  @@index([categoryId], map: "VideoTutorial_categoryId_idx")
}

model work {
  id             String        @id @default(cuid())
  title          String        @db.VarChar(255)
  slug           String        @unique(map: "Work_slug_key") @db.VarChar(255)
  workType       work_workType @default(DESIGN)
  description    String?       @db.Text
  content        Json?
  coverImage     String        @db.Text
  images         Json
  currentVersion String?       @db.VarChar(20)
  price          Decimal?      @db.Decimal(10, 2)
  isFree         Boolean       @default(false)
  figmaUrl       String?       @db.Text
  deliveryUrl    String?       @db.Text
  fileUrl        String?       @db.Text
  fileName       String?       @db.VarChar(255)
  demoUrl        String?       @db.Text
  demoQrCode     String?       @db.Text
  status         work_status   @default(DRAFT)
  categoryId     String?
  authorId       String
  sortOrder      Int           @default(0)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  coverRatio     String        @default("3:4") @db.VarChar(10)
  order          order[]
  user           user          @relation(fields: [authorId], references: [id], map: "Work_authorId_fkey")
  category       category?     @relation(fields: [categoryId], references: [id], map: "Work_categoryId_fkey")
  workversion    workversion[]
  tag            tag[]         @relation("tagtowork")

  @@index([authorId], map: "Work_authorId_idx")
  @@index([categoryId], map: "Work_categoryId_idx")
  @@index([status], map: "Work_status_idx")
  @@index([workType], map: "Work_workType_idx")
}

model workversion {
  id          String   @id @default(cuid())
  workId      String
  version     String   @db.VarChar(20)
  price       Decimal  @db.Decimal(10, 2)
  changelog   String?  @db.Text
  figmaUrl    String?  @db.Text
  deliveryUrl String?  @db.Text
  fileUrl     String?  @db.Text
  fileName    String?  @db.VarChar(255)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  order       order[]
  work        work     @relation(fields: [workId], references: [id], onDelete: Cascade, map: "WorkVersion_workId_fkey")

  @@unique([workId, version], map: "WorkVersion_workId_version_key")
  @@index([workId], map: "WorkVersion_workId_idx")
}

enum category_type {
  POST
  WORK
  DESIGN
  DEVELOPMENT
  TUTORIAL
  TOOL
  KNOWLEDGE_BASE
}

enum user_role {
  ADMIN
  VIEWER
}

enum work_workType {
  DESIGN
  DEVELOPMENT
}

enum order_status {
  PENDING
  PAID
  CANCELLED
  REFUNDED
}

enum post_status {
  DRAFT
  PUBLISHED
}

enum work_status {
  DRAFT
  PUBLISHED
}
